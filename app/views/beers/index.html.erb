<h1> Boulder Beers </h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>ABV%</th>
      <th>IBUs</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @beers.each do |beer| %>
      <td><%= beer.name %></td>
      <td><%= beer.beer_type %></td>
      <td><%= beer.abv %></td>
      <td><%= beer.ibu %></td>
      <!-- <td><%= beer.image %></td> -->
      <td><%= link_to "View Beer", beer, class: "btn btn-success" %></td>
      <td><%= link_to "Edit Beer", edit_beer_path(beer), class: "btn btn-info" %></td>
      <td><%= link_to beer, method: :delete, data: {confirm: 'Are you sure?'} do %>
      <span class="btn btn-danger">Eliminate Beer</span>
      <% end %></td>
    </tr>
    <% end %>

  </tbody>
</table>

<%= link_to "Add New Beer", new_beer_path, class: "btn btn-warning" %>
